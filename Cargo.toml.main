[package]
name = "rustation-wasm"
version = "0.1.0"
authors = ["Lionel Flandrin <lionel@svkt.org>"]
edition = "2018"
description = "A PlayStation emulator WebAssembly module"
license = "GPL-2.0+"
keywords = ["emulator", "playstation", "wasm"]

[lib]
name = "rustation_wasm"
crate-type = ["cdylib"]
path = "src/wasm_minimal.rs"

[features]
default = ["console_error_panic_hook"]

[profile.release]
opt-level = "z"
lto = true
debug = false
panic = 'abort'

[package.metadata.wasm-pack]
wasm-opt = false

[dependencies]
wasm-bindgen = "0.2"
wasm-bindgen-futures = "0.4"
js-sys = "0.3"
console_error_panic_hook = { version = "0.1", optional = true }
wee_alloc = { version = "0.4", optional = true }

[dependencies.web-sys]
version = "0.3"
features = [
  "console",
  "Document",
  "Element",
  "HtmlCanvasElement",
  "HtmlElement",
  "HtmlInputElement",
  "MouseEvent",
  "Window",
  "CanvasRenderingContext2d",
  "ImageData",
  "KeyboardEvent",
  "AudioContext",
  "AudioBuffer",
  "AudioBufferSourceNode",
  "GainNode",
  "Gamepad",
  "GamepadButton",
  "Navigator",
]